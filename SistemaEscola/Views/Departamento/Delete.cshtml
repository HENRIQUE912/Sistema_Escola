@model SistemaEscola.Models.Departamento

@{
    ViewData["Title"] = "Excluir o departamento";
}

<h1>Excluir</h1>

<h3>Voce realmente quer excluir este departamento?</h3>
<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
